<p>Squeaker is all about sharing every little inane thought you have with the world. Don't be shy!</p>
<%= form_for(@message) do |form| %>
	<%= form.label :content, "Squeak something!" %>
	<%= form.text_field :content %>
	<%= form.hidden_field :user_id %>
	<%= form.submit "Squeak" %>
<% end %>

<% if @logged_in_user.followed_users.count > 0 %>
	<h2>People I follow</h2>
	<%= user_list(@logged_in_user.followed_users, 'followed_users') %>
<% end %>

<% if @feed.any? %>
  <h2>Messages</h2>
  <ul id="messages">
    <% @feed.each do |message| %>
    <li class="message"><%= link_to message.user.username, user_path(message.user.username)%>:</td><td><%=h message.content %></li>
    <% end %>
  </ul>
<% end %>
